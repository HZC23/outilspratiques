{
  "name": "outilspratiques",
  "version": "1.0.0",
  "description": "Collection d'outils pratiques en ligne",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "build": "node build-config.js",
    "minify-js": "npm run build-config.js",
    "optimize-images": "imagemin icons/* --out-dir=dist/icons && imagemin images/* --out-dir=dist/images",
    "lint-js": "eslint js/**/*.js",
    "lint-css": "stylelint \"styles/**/*.css\"",
    "lint": "npm run lint-js && npm run lint-css",
    "test": "echo \"No tests configured yet\"",
    "generate-sitemap": "node js/utils/sitemap-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outilspratiques/outilspratiques.github.io.git"
  },
  "keywords": [
    "outils",
    "calculatrice",
    "minuteur",
    "chronomÃ¨tre",
    "convertisseur",
    "traducteur",
    "PWA"
  ],
  "author": "Outils Pratiques",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/outilspratiques/outilspratiques.github.io/issues"
  },
  "homepage": "https://outilspratiques.github.io",
  "devDependencies": {
    "supabase": "^1.140.0",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^7.1.0",
    "postcss-url": "^10.1.3",
    "uglify-js": "^3.19.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "cssnano": "^7.0.7",
    "uglify-js": "^3.19.3"
  }
}
